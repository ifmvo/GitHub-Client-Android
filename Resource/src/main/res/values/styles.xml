<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!--透明-->
    <style name="Transparent" parent="FULL_SCREEN">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>
    <!--全屏-->
    <style name="FULL_SCREEN" parent="AppTheme">
        <item name="android:windowIsTranslucent">true</item>
    </style>
    <!--横向的线-->
    <style name="line_horizontal">
        <item name="android:background">@color/color_line</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/d_line_h</item>
    </style>

    <!--竖向的线-->
    <style name="line_vertical">
        <item name="android:background">@color/color_line</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">@dimen/d_line_h</item>
    </style>

    <!-- Dialog 通用的 -->
    <style name="dialog_common" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item><!--是否浮在在activity的上面-->
        <item name="android:windowContentOverlay">@null</item><!--每次启动 应用程序的时候 一开始显示的不是那个设置的背景图片  而是白色或黑色背景 -->
        <item name="android:windowIsTranslucent">true</item> <!--半透明的-->
        <item name="android:backgroundDimEnabled">true</item><!--是否允许背景变暗-->
        <item name="android:backgroundDimAmount">0.7</item><!--变暗的程度喽-->
    </style>

</resources>
